<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DFDEDE"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="智慧城市"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:layout_toStartOf="@id/home_search_base"
                android:background="@drawable/edit_search_shape"
                android:orientation="horizontal"
                >
                <ImageView
                    android:id="@+id/iv_mei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_search" />
                <EditText
                    android:id="@+id/home_edit_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@+id/iv_mei"
                    android:layout_toLeftOf="@+id/btn_sousuo"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:maxLines="1"
                    android:hint="搜索"
                    android:textSize="15sp"/>
                <Button
                    android:id="@+id/btn_sousuo"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="搜索"
                    android:textColor="#FFF"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/btn_sousuo"
                    />
            </RelativeLayout>

            <TextView
                android:id="@+id/home_search_base"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="5dp"
                android:text="取消"
                android:textColor="#333"
                android:visibility="gone" />
        </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <com.youth.banner.Banner
                    android:id="@+id/a_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐服务"
                    android:layout_marginTop="10dp"
                    android:textColor="#2C2C2C"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"/>
                <com.gzeic.smartcity01.Tools.MyGridView
                    android:id="@+id/gridview"
                    android:layout_width="match_parent"
                    android:numColumns="5"
                    android:stretchMode="columnWidth"
                    android:layout_height="wrap_content">
                </com.gzeic.smartcity01.Tools.MyGridView>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专题"
                android:textColor="#2C2C2C"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/fa_zt_ll1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/fa_zt_image1"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/ceshi"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/fa_zt_text1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容"
                                android:maxLines="2"
                                android:maxEms="13"
                                android:ellipsize="end"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/fa_zt_ll2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/fa_zt_image2"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/ceshi"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/fa_zt_text2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容"
                                android:maxLines="2"
                                android:textSize="12sp"
                                android:maxEms="13"
                                android:ellipsize="end"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_marginEnd="10dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/fa_zt_ll3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/fa_zt_image3"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/ceshi"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/fa_zt_text3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:text="报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容"
                                android:maxLines="2"
                                android:maxEms="13"
                                android:ellipsize="end"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:layout_marginStart="10dp"
                        app:cardCornerRadius="10dp"
                        >
                        <LinearLayout
                            android:id="@+id/fa_zt_ll4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:id="@+id/fa_zt_image4"
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/ceshi"
                                android:scaleType="centerCrop"/>
                            <TextView
                                android:id="@+id/fa_zt_text4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容报讯内容"
                                android:maxLines="2"
                                android:textSize="12sp"
                                android:maxEms="13"
                                android:ellipsize="end"
                                android:layout_margin="5dp"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:background="#FFF"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <GridView
                    android:id="@+id/rec_newsfl"
                    android:layout_width="match_parent"
                    android:horizontalSpacing="3dp"
                    android:numColumns="6"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#BFBFBF"/>
            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/news_list"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>