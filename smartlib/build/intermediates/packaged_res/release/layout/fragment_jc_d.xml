<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:background="#FFF"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车牌号"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/reg_chepai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入车牌号"
            android:drawablePadding="10dp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车架号"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/reg_chejia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入车架号"
            android:drawablePadding="10dp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车辆类型"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/reg_cheleixin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入车辆类型"
            android:drawablePadding="10dp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公里数"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/reg_gongli"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入公里数"
            android:drawablePadding="10dp"
            android:background="@null"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号"
            android:textSize="16sp"
            android:layout_margin="10dp"
            />
        <EditText
            android:id="@+id/reg_shouji"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="请输入手机号"
            android:drawablePadding="10dp"
            android:background="@null"
            />
    </LinearLayout>
    <Button
        android:id="@+id/reg_reg_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="添加"
        android:textColor="#FFF"
        android:background="@drawable/btn_bule"
        android:gravity="center"
        android:layout_margin="10dp"
        />
</LinearLayout>