<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    >
    <RelativeLayout
        android:id="@+id/rl_rl1"
        android:layout_width="match_parent"
        android:background="#2196F3"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="注册"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_margin="10dp"
        android:background="#FFF"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#2196F3"
                android:text="SMART CITY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#2196F3"
                android:textSize="30sp"
                android:text="智慧城市"/>
        </LinearLayout>
        <EditText
            android:id="@+id/reg_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/et_phone"
            android:hint="请输入账号"
            android:drawablePadding="10dp"
            android:background="@null"
            android:inputType="text"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <EditText
            android:id="@+id/reg_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/et_password"
            android:hint="请输入昵称"
            android:drawablePadding="10dp"
            android:background="@null"
            android:inputType="textPersonName"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <EditText
            android:id="@+id/reg_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/et_phone"
            android:hint="请输入手机号"
            android:drawablePadding="10dp"
            android:background="@null"
            android:inputType="phone"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <EditText
            android:id="@+id/reg_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/et_password"
            android:hint="请输入密码"
            android:drawablePadding="10dp"
            android:background="@null"
            android:inputType="textPassword"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#B1A6A6"/>
        <Button
            android:id="@+id/reg_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="已有账号，立即登录"
            android:layout_gravity="center"
            android:background="#FFF"
            />
    </LinearLayout>
    <Button
        android:id="@+id/reg_reg_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册"
        android:textColor="#FFF"
        android:background="@drawable/btn_bule"
        android:gravity="center"
        android:layout_margin="10dp"
        />

</LinearLayout>