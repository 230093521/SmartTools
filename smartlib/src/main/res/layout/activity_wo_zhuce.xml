<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EFEFEF"
    >
    <RelativeLayout
        android:id="@+id/rl_rl1"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="注册"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_margin="10dp"
            android:background="#FFF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="#5F8BFA"
                    android:text="SMART CITY"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#5F8BFA"
                    android:textSize="30sp"
                    android:text="智慧城市"/>
            </LinearLayout>
            <EditText
                android:id="@+id/reg_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_phone"
                android:hint="请输入账号"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="text"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <EditText
                android:id="@+id/reg_nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_password"
                android:hint="请输入昵称"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="textPersonName"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <EditText
                android:id="@+id/reg_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_phone"
                android:hint="请输入手机号"
                android:drawablePadding="10dp"
                android:background="@null"
                android:maxLength="11"
                android:inputType="phone"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <EditText
                android:id="@+id/reg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_password"
                android:hint="请输入邮箱"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="textEmailAddress"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <EditText
                android:id="@+id/reg_shenfen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_password"
                android:hint="请输入身份证号"
                android:drawablePadding="10dp"
                android:background="@null"
                android:maxLength="18"
                android:inputType="number"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <EditText
                android:id="@+id/reg_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:drawableLeft="@drawable/et_password"
                android:hint="请输入密码"
                android:drawablePadding="10dp"
                android:background="@null"
                android:inputType="textPassword"
                android:maxLength="15"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="性别"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#535353"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    />
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp"
                    >
                    <RadioButton
                        android:id="@+id/nan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:checked="true"
                        />
                    <RadioButton
                        android:id="@+id/nv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="女"
                        />
                </RadioGroup>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#B1A6A6"/>
            <Button
                android:id="@+id/reg_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="已有账号，立即登录"
                android:layout_gravity="center"
                android:background="#FFF"
                />
            <Button
                android:id="@+id/reg_reg_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="注册"
                android:textColor="#FFF"
                android:background="@drawable/btn_bule"
                android:gravity="center"
                android:layout_margin="10dp"
                />
        </LinearLayout>
    </ScrollView>



</LinearLayout>