<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="180dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="推荐服务"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#6A6A6A" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/zdcx"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_ditiebaise" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="站点查询" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/xlcx"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_xianlubaise" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="线路查询" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/ccxz"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_xuzhibaise" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="乘车须知" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/yygg"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_gonggaobaise" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="运营公告" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="当前站点："
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#6A6A6A" />
                <TextView
                    android:id="@+id/zdmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="建国门"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="#588AF9" />
            </LinearLayout>

            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/zdlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:dividerHeight="5dp"
                android:layout_margin="5dp"
                android:divider="#FFF"
                />
            <com.gzeic.smartcity01.Tools.HorizontalListView
                android:id="@+id/xwlist"
                android:layout_width="match_parent"
                android:layout_height="150dp"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>