<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_toStartOf="@id/home_search_base"
                    android:background="@drawable/edit_search_shape"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_mei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_search" />
                    <EditText
                        android:id="@+id/home_edit_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toRightOf="@+id/iv_mei"
                        android:layout_toLeftOf="@+id/btn_sousuo"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:maxLines="1"
                        android:hint="输入搜索关键字"
                        android:textSize="15sp"/>
                    <Button
                        android:id="@+id/btn_sousuo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="搜索"
                        android:textColor="#FFF"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/btn_sousuo"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/home_search_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:text="取消"
                    android:textColor="#333"
                    android:visibility="gone" />
            </RelativeLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <com.youth.banner.Banner
                    android:id="@+id/a_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="通知消息："
                    />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_tongzhi"
                    />
                <com.gzeic.smartcity01.Tools.ScrollingTextView
                    android:id="@+id/tongzhi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="您有待处理的违章"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/wzcl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_wzcl"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="违章处理" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/jnfk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_fkjn" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="罚款缴纳" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/clba"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_clba" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="车辆备案" />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/czbx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">
                        <ImageView
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_wzcx" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="违章撤销" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="30dp">

                        <ImageView
                            android:id="@+id/fwzx"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:background="@color/colorPrimary"
                            android:padding="15dp"
                            android:src="@drawable/ic_fwzx"/>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="服务中心" />
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="资讯中心"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>
                <com.gzeic.smartcity01.Tools.ListViewScrollView
                    android:id="@+id/zxlist"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="center_horizontal"
                    android:layout_height="wrap_content">
                </com.gzeic.smartcity01.Tools.ListViewScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="服务中心"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:id="@+id/gengduofuwu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="更多"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>
            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/fw"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center_horizontal"
                android:paddingRight="10dp"
                android:layout_height="wrap_content">
            </com.gzeic.smartcity01.Tools.ListViewScrollView>
            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/zhoubianlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
            <RelativeLayout
                android:id="@+id/rl_yjfk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="意见反馈"
                    android:textColor="#000"
                    android:textSize="16sp"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进入"
                    android:textColor="#2196F3"
                    android:textSize="16sp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>