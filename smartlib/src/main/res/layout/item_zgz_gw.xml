<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/news_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:background="#E8F5FF"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="职位名称："
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/zwmc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="岗位职责："
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/zhizhe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司地点："
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/didian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="薪资待遇："
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
                <TextView
                    android:id="@+id/daiyu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新闻标题"
                    android:maxLines="1"
                    android:layout_marginTop="10dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
