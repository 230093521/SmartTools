<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".x_jf.JfSjActivity">

    <RelativeLayout
        android:id="@+id/home_toprl"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5F8BFA">
        <ImageView
            android:id="@+id/home_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="7天天气"
            android:textColor="#FFF" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="当天天气"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:textColor="#393939"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="15dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F8FCFF"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="当前温度"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/dqwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="26℃"
                                android:layout_margin="10dp"
                                android:textColor="#00BCD4"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="最高温度"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/jr_qw"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="26℃"
                                android:layout_margin="10dp"
                                android:textColor="#5F8BFA"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="最低温度"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/zdwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="16℃"
                                android:layout_margin="10dp"
                                android:textColor="#5F8BFA"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="天气情况"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/tqqk"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="晴"
                                android:layout_margin="10dp"
                                android:textColor="#F44336"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="空气质量"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/kqzl"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="优"
                                android:layout_margin="10dp"
                                android:textColor="#4CAF50"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="体感温度"
                                android:layout_margin="10dp"
                                android:textColor="#5C5C5C"/>
                            <TextView
                                android:id="@+id/tgwd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="22℃"
                                android:layout_margin="10dp"
                                android:textColor="#5F8BFA"/>
                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="紫外线指数"
                            android:layout_margin="10dp"
                            android:textColor="#5C5C5C"/>
                        <TextView
                            android:id="@+id/zwx"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="100"
                            android:layout_margin="10dp"
                            android:textColor="#F96661"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_centerHorizontal="true"
                            >
                            <com.gzeic.smartcity01.Tools.CircularProgressView
                                android:id="@+id/progress"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                app:backColor="#E1E1E1"
                                app:backWidth="6dp"
                                app:progColor="@color/colorPrimary"
                                app:progWidth="6dp"
                                app:progress="65"
                                android:layout_marginBottom="20dp"
                                />
<!--                            <ProgressBar-->
<!--                                android:id="@+id/progress"-->
<!--                                style="?android:attr/progressBarStyle"-->
<!--                                android:layout_width="120dp"-->
<!--                                android:layout_height="120dp"-->
<!--                                android:progress="50"-->
<!--                                android:max="100"-->
<!--                                />-->
                            <TextView
                                android:id="@+id/shidu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="空气湿度:36"
                                android:gravity="center"
                                android:textSize="10sp"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="#676767"
                                tools:ignore="SmallSp" />
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="未来7天"
                android:layout_marginStart="10dp"
                android:textColor="#393939"/>
            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/list"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#FFF"
                android:paddingBottom="50dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>