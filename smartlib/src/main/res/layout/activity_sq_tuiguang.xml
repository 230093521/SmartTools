                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="位于XXX的优质商铺"
                android:textSize="11sp"
                android:maxLines="2"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布时间："
