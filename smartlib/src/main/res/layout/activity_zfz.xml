<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#DFDEDE"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5F8BFA">

        <ImageView
            android:id="@+id/metro_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="找房子"
            android:textColor="#FFF"/>
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="10dp">
                <com.youth.banner.Banner
                    android:id="@+id/a_banner"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    />
            </androidx.cardview.widget.CardView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:layout_toStartOf="@id/home_search_base"
                    android:background="@drawable/edit_search_shape"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/iv_mei"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/ic_search" />
                    <EditText
                        android:id="@+id/home_edit_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_toEndOf="@+id/iv_mei"
                        android:layout_toStartOf="@+id/btn_sousuo"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:maxLines="1"
                        android:hint="搜索"
                        android:textSize="15sp"/>
                    <Button
                        android:id="@+id/btn_sousuo"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:text="搜索"
                        android:textColor="#FFF"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/btn_sousuo"
                        />
                </RelativeLayout>

                <TextView
                    android:id="@+id/home_search_base"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="5dp"
                    android:text="取消"
                    android:textColor="#333"
                    android:visibility="gone" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="房源类型"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#6A6A6A"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="3dp"
                    android:background="#FFFFFF"
                    >
                    <TextView
                        android:id="@+id/ershou"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="二手"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="#858585"
                        />
                    <TextView
                        android:id="@+id/zhufang"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="租房"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="#858585"
                        />
                    <TextView
                        android:id="@+id/loupan"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="楼盘"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="#858585"
                        />
                    <TextView
                        android:id="@+id/zhongjie"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="中介"
                        android:textSize="16sp"
                        android:textColor="#5A5A5A"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        />

                </LinearLayout>
            </LinearLayout>
            <com.gzeic.smartcity01.Tools.ListViewScrollView
                android:id="@+id/fy_list"
                android:background="#FFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:paddingBottom="100dp"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>