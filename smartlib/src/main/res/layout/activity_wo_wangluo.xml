<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:id="@+id/rl_rl1"
        android:layout_width="match_parent"
        android:background="#5F8BFA"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/set_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:onClick="onClick"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFF"
            android:text="设置IP端口"
            android:textSize="15sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/rl_rl1"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/set_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="格式：127.0.0.1:8080"
            android:textSize="15sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:background="@drawable/edit_search_shape"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/set_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="保存"
            android:gravity="center"
            android:textColor="#FFF"
            android:onClick="onClick"
            android:background="@drawable/btn_bg_bule"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            />
    </LinearLayout>

</RelativeLayout>