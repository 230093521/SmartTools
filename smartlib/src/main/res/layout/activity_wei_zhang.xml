<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DDD"
    tools:context=".activity.WeiZhangActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#03A9F4">
        <ImageView
            android:id="@+id/metro_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="违章首页"
            android:textColor="#FFF" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <com.youth.banner.Banner
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="#FFF"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴费单位"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/chelei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小型汽车"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="缴费单位"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    />
                <TextView
                    android:id="@+id/paizilei"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="京"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginStart="20dp"
                    android:layout_marginBottom="10dp"
                    />
                <EditText
                    android:id="@+id/paihao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_search_shape"
                    android:layout_marginLeft="10dp"
                    android:hint="请输入车牌号码"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发动机号"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginLeft="20dp"
                    />
                <EditText
                    android:id="@+id/fadongji"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_search_shape"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:hint="请输入发动机号"
                    android:textSize="12sp"
                    android:padding="5dp"
                    android:layout_marginBottom="10dp"
                    />
            </LinearLayout>
            <Button
                android:id="@+id/chaxunbtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="车辆违章查询"
                android:textColor="#FFF"
                android:background="@drawable/btn_bule"
                android:gravity="center"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="本服务由“违章查询”版权所有"
                android:textSize="15sp"
                android:textColor="#AEAEAE"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                />
        </LinearLayout>


    </androidx.cardview.widget.CardView>
</LinearLayout>