<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#5F8BFA">
        <ImageView
            android:id="@+id/metro_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_back" />
        <TextView
            android:id="@+id/home_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="场内找车"
            android:textColor="#FFF" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_toStartOf="@id/home_search_base"
            android:background="@drawable/edit_search_shape"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/iv_mei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_search" />
            <EditText
                android:id="@+id/home_edit_search"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toRightOf="@+id/iv_mei"
                android:layout_toLeftOf="@+id/btn_sousuo"
                android:layout_centerVertical="true"
                android:background="@null"
                android:maxLines="1"
                android:hint="请输入车牌号"
                android:maxLength="10"
                android:textSize="15sp"/>
            <Button
                android:id="@+id/btn_sousuo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="找车"
                android:textColor="#FFF"
                android:layout_alignParentEnd="true"
                android:background="@drawable/btn_sousuo"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/home_search_base"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="取消"
            android:textColor="#333"
            android:visibility="gone" />
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="20dp">
        <LinearLayout
            android:id="@+id/cnzc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FDFDFD"
            android:padding="10dp"
            android:visibility="gone"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国际大厦停车场"
                    android:layout_margin="10dp"
                    />
                <TextView
                    android:id="@+id/cheweihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="522号车位"
                    android:layout_alignParentEnd="true"
                    android:textColor="#5F8BFA"
                    android:textSize="12sp"
                    android:layout_margin="10dp"
                    />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDD"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_weizhi"/>
                <TextView
                    android:id="@+id/weizhi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="位置"
                    android:layout_marginStart="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>